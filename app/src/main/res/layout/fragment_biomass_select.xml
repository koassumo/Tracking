<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.biomass.BiomassSelectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/step_huge">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bs_title"
            style="@style/txt_title"
            android:text="@string/biomass_package"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bs_id"
            style="@style/txt_title"
            android:text="#1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bs_type_title"
            style="@style/txt_common"
            android:text="@string/biomass_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_title" />

        <RadioGroup
            android:id="@+id/bs_radio_group"
            style="@style/all_common"
            android:checkedButton="@+id/radio_button_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_type_title">

            <RadioButton
                android:id="@+id/bs_radio_1"
                style="@style/radio_common"
                android:checked="true"
                android:text="@string/biomass_type_1" />

            <RadioButton
                android:id="@+id/radio_2"
                style="@style/radio_common"
                android:text="@string/biomass_type_2" />

            <RadioButton
                android:id="@+id/radio_3"
                style="@style/radio_common"
                android:text="@string/biomass_type_3" />


        </RadioGroup>


        <TextView
            android:id="@+id/bs_weight_title"
            style="@style/txt_common_first"
            android:text="@string/biomass_weight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_radio_group" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bs_weight_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/step_normal"
            android:layout_marginStart="@dimen/margin_start_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_weight_title"
            app:boxStrokeWidth="@dimen/stroke_small"
            app:boxStrokeWidthFocused="@dimen/stroke_large"
            android:hint="@string/bs_weight_hint"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bs_weight"
                style="@style/all_common"
                android:layout_width="@dimen/step_huge"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="10" />
            />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/bs_moisture_title"
            style="@style/txt_common_first"
            android:text="@string/biomass_moisture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_weight_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bs_moisture_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/step_normal"
            android:layout_marginStart="@dimen/margin_start_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_moisture_title"
            app:boxStrokeWidth="@dimen/stroke_small"
            app:boxStrokeWidthFocused="@dimen/stroke_large"
            android:hint="@string/bs_moisture_hint"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bs_moisture"
                style="@style/all_common"
                android:layout_width="@dimen/step_huge"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="10" />
            />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/bs_carbon_dm_title"
            style="@style/txt_common_first"
            android:text="@string/biomass_carbon_dm_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_moisture_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bs_carbon_dm_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/step_normal"
            android:layout_marginStart="@dimen/margin_start_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bs_carbon_dm_title"
            app:boxStrokeWidth="@dimen/stroke_small"
            app:boxStrokeWidthFocused="@dimen/stroke_large"
            android:hint="@string/bs_moisture_hint"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bs_carbon_dm"
                style="@style/all_common"
                android:text="50"
                android:layout_width="@dimen/step_huge"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="10" />
            />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/bs_carbon_dm_seekbar"
            style="@style/all_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bs_carbon_dm_layout"
            app:layout_constraintTop_toTopOf="@+id/bs_carbon_dm_layout">

        </androidx.appcompat.widget.AppCompatSeekBar>


