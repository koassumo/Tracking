<!--                android:background="@color/primary_color"-->
<!--                android:inputType="numberDecimal"-->
<!--                android:maxLength="10" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>