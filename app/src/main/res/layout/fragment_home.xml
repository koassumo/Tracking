<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/step_huge_xx">


            <!-- Pack 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proj_pack_1"
                style="@style/card_common"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/proj_info_1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/elevation_large" />

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/proj_pack_1_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>

                    <ImageView
                        android:id="@+id/proj_info_1_icon"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="@dimen/step_small"
                        android:layout_marginStart="-15dp"
                        android:src="@drawable/s_transp_400x400"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/proj_pack_1_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/proj_info_1_title"
                        style="@style/iv_txt_title"
                        android:text="@string/rottweil"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_1_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/proj_info_1_title_value"
                        style="@style/iv_txt_title_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_info_1_title"
                        app:layout_constraintTop_toTopOf="@id/proj_info_1_title" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/proj_loc_status_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tertiary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/proj_info_1_title">


                        <ImageView
                            android:id="@+id/proj_icon_loc"
                            android:layout_width="@dimen/step_large_plus"
                            android:layout_height="@dimen/step_large_plus"
                            android:padding="@dimen/step_xx_small"
                            android:src="@drawable/baseline_location_on_24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/proj_pack_1_guide"
                            app:layout_constraintTop_toTopOf="parent" />


                    </com.google.android.material.card.MaterialCardView>


<!--                    <ImageView-->
<!--                        android:id="@+id/proj_arrow_down"-->
<!--                        android:layout_width="@dimen/card_icon_small"-->
<!--                        android:layout_height="@dimen/card_icon_small"-->
<!--                        android:src="@drawable/ic_arrow_down_24"-->
<!--                        android:visibility="gone"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@id/proj_cv_status" />-->

<!--                    <ImageView-->
<!--                        android:id="@+id/proj_arrow_up"-->
<!--                        android:layout_width="@dimen/card_icon_small"-->
<!--                        android:layout_height="@dimen/card_icon_small"-->
<!--                        android:src="@drawable/ic_arrow_up_24"-->
<!--                        android:visibility="gone"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@id/proj_cv_status" />-->


                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/eye_group_grandparents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:constraint_referenced_ids="proj_type_title,
                                                        proj_weight_title,
                                                        proj_moisture_title,
                                                        proj_carbon_dm_title" />


                    <TextView
                        android:id="@+id/proj_type_title"
                        style="@style/iv_txt_first"
                        android:text="@string/proj_type"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_1_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_info_1_title" />

                    <TextView
                        android:id="@+id/proj_type_title_value"
                        style="@style/iv_txt_value"
                        android:text="manual"
                        app:layout_constraintStart_toEndOf="@id/proj_type_title"
                        app:layout_constraintTop_toTopOf="@id/proj_type_title" />

                    <TextView
                        android:id="@+id/proj_weight_title"
                        style="@style/iv_txt"
                        android:text="@string/proj_location"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_1_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_type_title" />

                    <TextView
                        android:id="@+id/proj_weight_title_value"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_weight_title"
                        app:layout_constraintTop_toTopOf="@id/proj_weight_title" />

                    <TextView
                        android:id="@+id/proj_moisture_title"
                        style="@style/iv_txt"
                        android:text="@string/proj_number_of_reactors"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_1_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_weight_title" />

                    <TextView
                        android:id="@+id/proj_moisture_title_value"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_moisture_title"
                        app:layout_constraintTop_toTopOf="@id/proj_moisture_title" />


                    <TextView
                        android:id="@+id/proj_carbon_dm_title"
                        style="@style/iv_txt"
                        android:text="@string/proj_total_power"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_1_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_moisture_title" />

                    <TextView
                        android:id="@+id/proj_carbon_dm_title_value"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_carbon_dm_title"
                        app:layout_constraintTop_toTopOf="@id/proj_carbon_dm_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Pack 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proj_pack_2"
                style="@style/card_common"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/proj_pack_1">

                <View
                    android:id="@+id/proj_info_2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/elevation_large" />

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/proj_pack_2_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>

                    <ImageView
                        android:id="@+id/proj_info_2_icon"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="@dimen/step_normal"

                        android:src="@drawable/xs_transp_400x400"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/proj_pack_2_guide"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/proj_info_2_title"
                        style="@style/iv_txt_title"
                        android:text="@string/proj_blodnoch"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_2_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/proj_info_2_title_value"
                        style="@style/iv_txt_title_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_info_2_title"
                        app:layout_constraintTop_toTopOf="@id/proj_info_2_title" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/proj_cv_status_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tertiary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/proj_info_2_title">


                        <ImageView
                            android:id="@+id/proj_icon_loc_2"
                            android:layout_width="@dimen/step_large_plus"
                            android:layout_height="@dimen/step_large_plus"
                            android:padding="@dimen/step_xx_small"
                            android:src="@drawable/baseline_location_on_24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/proj_pack_1_guide"
                            app:layout_constraintTop_toTopOf="parent" />




                    </com.google.android.material.card.MaterialCardView>


                    <ImageView
                        android:id="@+id/proj_arrow_down_2"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_down_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/proj_cv_status_2" />

                    <ImageView
                        android:id="@+id/proj_arrow_up_2"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_up_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/proj_cv_status_2" />


                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/eye_group_grandparents_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:constraint_referenced_ids="proj_type_title_2,
                                                        proj_weight_title_2,
                                                        proj_moisture_title_2,
                                                        proj_carbon_dm_title_2" />


                    <TextView
                        android:id="@+id/proj_type_title_2"
                        style="@style/iv_txt_first"
                        android:text="@string/proj_type"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_2_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_info_2_title" />


                    <TextView
                        android:id="@+id/proj_type_title_value_2"
                        style="@style/iv_txt_value"
                        android:text="@string/proj_continueable"
                        app:layout_constraintStart_toEndOf="@id/proj_type_title_2"
                        app:layout_constraintTop_toTopOf="@id/proj_type_title_2" />

                    <TextView
                        android:id="@+id/proj_weight_title_2"
                        style="@style/iv_txt"
                        android:text="@string/proj_location"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_2_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_type_title_2" />

                    <TextView
                        android:id="@+id/proj_weight_title_value_2"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_weight_title_2"
                        app:layout_constraintTop_toTopOf="@id/proj_weight_title_2" />

                    <TextView
                        android:id="@+id/proj_moisture_title_2"
                        style="@style/iv_txt"
                        android:text="@string/proj_number_of_reactors"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_2_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_weight_title_2" />

                    <TextView
                        android:id="@+id/proj_moisture_title_value_2"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_moisture_title_2"
                        app:layout_constraintTop_toTopOf="@id/proj_moisture_title_2" />


                    <TextView
                        android:id="@+id/proj_carbon_dm_title_2"
                        style="@style/iv_txt"
                        android:text="@string/proj_total_power"
                        app:layout_constraintStart_toStartOf="@+id/proj_pack_2_guide"
                        app:layout_constraintTop_toBottomOf="@id/proj_moisture_title_2" />

                    <TextView
                        android:id="@+id/proj_carbon_dm_title_value_2"
                        style="@style/iv_txt_value"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@id/proj_carbon_dm_title_2"
                        app:layout_constraintTop_toTopOf="@id/proj_carbon_dm_title_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/proj_add_btn"-->
<!--                style="@style/btn_common"-->
<!--                android:text="@string/add_project"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/proj_pack_2" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>