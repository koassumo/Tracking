<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.biomass.BiomassFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- Pack 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/biomass_pack_1"
                style="@style/card_common"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/biomass_info_1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/elevation_large" />

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">


                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/biomass_info_1_icon"-->
                    <!--                        android:layout_width="@dimen/card_icon_small"-->
                    <!--                        android:layout_height="@dimen/card_icon_small"-->
                    <!--                        android:src="@drawable/ic_menu_slideshow"-->
                    <!--                        app:layout_constraintStart_toStartOf="parent"-->
                    <!--                        app:layout_constraintTop_toTopOf="parent" />-->

                    <TextView
                        android:id="@+id/biomass_info_1_title"
                        style="@style/iv_txt_title"
                        android:text="@string/biomass_package"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/biomass_cv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/biomass_info_1_title">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/biomass_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/step_xx_small"
                            android:layout_marginTop="@dimen/step_zero"
                            android:text="@string/biomass_status_raw"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </com.google.android.material.card.MaterialCardView>


                    <ImageView
                        android:id="@+id/biomass_arrow_down"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_down_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_cv_status" />

                    <ImageView
                        android:id="@+id/biomass_arrow_up"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_up_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_cv_status" />


                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/eye_group_grandparents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:constraint_referenced_ids="biomass_type_title,
                                                        biomass_weight_title,
                                                        biomass_moisture_title,
                                                        biomass_carbon_dm_title" />


                    <TextView
                        android:id="@+id/biomass_type_title"
                        style="@style/iv_txt_first"
                        android:text="@string/biomass_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_info_1_title" />


                    <TextView
                        android:id="@+id/biomass_weight_title"
                        style="@style/iv_txt"
                        android:text="@string/biomass_weight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_type_title" />

                    <TextView
                        android:id="@+id/biomass_moisture_title"
                        style="@style/iv_txt"
                        android:text="@string/biomass_moisture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_weight_title" />

                    <TextView
                        android:id="@+id/biomass_carbon_dm_title"
                        style="@style/iv_txt"
                        android:text="@string/biomass_carbon_dm_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_moisture_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Pack 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/biomass_pack_2"
                style="@style/card_common"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_pack_1">

                <View
                    android:id="@+id/biomass_info_2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/elevation_large" />

                <androidx.constraintlayout.widget.ConstraintLayout style="@style/card_constraint">


                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/biomass_info_1_icon"-->
                    <!--                        android:layout_width="@dimen/card_icon_small"-->
                    <!--                        android:layout_height="@dimen/card_icon_small"-->
                    <!--                        android:src="@drawable/ic_menu_slideshow"-->
                    <!--                        app:layout_constraintStart_toStartOf="parent"-->
                    <!--                        app:layout_constraintTop_toTopOf="parent" />-->

                    <TextView
                        android:id="@+id/biomass_info_2_title"
                        style="@style/iv_txt_title"
                        android:text="@string/biomass_package"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/biomass_cv_status_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/biomass_info_2_title">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/biomass_status_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/step_xx_small"
                            android:layout_marginTop="@dimen/step_zero"
                            android:text="@string/biomass_status_raw"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </com.google.android.material.card.MaterialCardView>


                    <ImageView
                        android:id="@+id/biomass_arrow_down_2"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_down_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_cv_status_2" />

                    <ImageView
                        android:id="@+id/biomass_arrow_up_2"
                        android:layout_width="@dimen/card_icon_small"
                        android:layout_height="@dimen/card_icon_small"
                        android:src="@drawable/ic_arrow_up_24"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_cv_status_2" />


                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/eye_group_grandparents_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:constraint_referenced_ids="biomass_type_title_2,
                                                        biomass_weight_title_2,
                                                        biomass_moisture_title_2,
                                                        biomass_carbon_dm_title_2" />


                    <TextView
                        android:id="@+id/biomass_type_title_2"
                        style="@style/iv_txt_first"
                        android:text="@string/biomass_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_info_2_title" />


                    <TextView
                        android:id="@+id/biomass_weight_title_2"
                        style="@style/iv_txt"
                        android:text="@string/biomass_weight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_type_title_2" />

                    <TextView
                        android:id="@+id/biomass_moisture_title_2"
                        style="@style/iv_txt"
                        android:text="@string/biomass_moisture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_weight_title_2" />

                    <TextView
                        android:id="@+id/biomass_carbon_dm_title_2"
                        style="@style/iv_txt"
                        android:text="@string/biomass_carbon_dm_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/biomass_moisture_title_2" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <!--    Summary -->
            <TextView
                android:id="@+id/biomass_summary_title"
                style="@style/txt_title"
                android:text="@string/summary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_add_btn" />

            <TextView
                android:id="@+id/biomass_summary_weight"
                style="@style/txt_common_first"
                android:text="@string/biomass_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_summary_title" />

            <TextView
                android:id="@+id/biomass_summary_moisture"
                style="@style/txt_common"
                android:text="@string/biomass_moisture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_summary_weight" />

            <TextView
                android:id="@+id/biomass_summary_carbon"
                style="@style/txt_common"
                android:text="@string/biomass_carbon_dm_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_summary_moisture" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/biomass_add_btn"
                style="@style/all_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary_color"
                android:text="+ Add package"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biomass_pack_2">

            </com.google.android.material.button.MaterialButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>